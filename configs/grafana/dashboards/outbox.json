{
  "dashboard": {
    "title": "Flowra Outbox Monitoring",
    "tags": ["flowra", "outbox", "events"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Outbox Backlog",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "flowra_outbox_events_pending",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 100, "color": "yellow"},
                {"value": 1000, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Events Processed (per minute)",
        "type": "graph",
        "gridPos": {"h": 6, "w": 9, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "rate(flowra_outbox_events_processed_total[1m])",
            "legendFormat": "{{event_type}} - {{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Events/sec", "logBase": 1, "show": true},
          {"format": "short", "logBase": 1, "show": false}
        ]
      },
      {
        "id": 3,
        "title": "Error Rate %",
        "type": "graph",
        "gridPos": {"h": 6, "w": 9, "x": 15, "y": 0},
        "targets": [
          {
            "expr": "100 * rate(flowra_outbox_events_processed_total{status=\"failed\"}[5m]) / rate(flowra_outbox_events_processed_total[5m])",
            "legendFormat": "{{event_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Error %", "logBase": 1, "max": 100, "min": 0, "show": true},
          {"format": "short", "logBase": 1, "show": false}
        ]
      },
      {
        "id": 4,
        "title": "Processing Latency (p50, p95, p99)",
        "type": "graph",
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 6},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(flowra_outbox_processing_duration_seconds_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(flowra_outbox_processing_duration_seconds_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(flowra_outbox_processing_duration_seconds_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration", "logBase": 1, "show": true},
          {"format": "short", "logBase": 1, "show": false}
        ]
      },
      {
        "id": 5,
        "title": "Publish Latency (p50, p95, p99)",
        "type": "graph",
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 6},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(flowra_outbox_publish_duration_seconds_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(flowra_outbox_publish_duration_seconds_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(flowra_outbox_publish_duration_seconds_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration", "logBase": 1, "show": true},
          {"format": "short", "logBase": 1, "show": false}
        ]
      },
      {
        "id": 6,
        "title": "Oldest Event Age",
        "type": "graph",
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "flowra_outbox_oldest_event_age_seconds",
            "legendFormat": "Age",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Age", "logBase": 1, "show": true},
          {"format": "short", "logBase": 1, "show": false}
        ]
      },
      {
        "id": 7,
        "title": "Events by Type",
        "type": "piechart",
        "gridPos": {"h": 6, "w": 6, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "sum by (event_type) (rate(flowra_outbox_events_processed_total[5m]))",
            "legendFormat": "{{event_type}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 8,
        "title": "Retry Count",
        "type": "graph",
        "gridPos": {"h": 6, "w": 6, "x": 18, "y": 12},
        "targets": [
          {
            "expr": "rate(flowra_outbox_retry_total[5m])",
            "legendFormat": "{{event_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Retries/sec", "logBase": 1, "show": true},
          {"format": "short", "logBase": 1, "show": false}
        ]
      },
      {
        "id": 9,
        "title": "Poll Batch Size",
        "type": "graph",
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 18},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(flowra_outbox_poll_batch_size_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(flowra_outbox_poll_batch_size_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(flowra_outbox_poll_batch_size_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Batch Size", "logBase": 1, "show": true},
          {"format": "short", "logBase": 1, "show": false}
        ]
      },
      {
        "id": 10,
        "title": "Cleanup Activity",
        "type": "graph",
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 18},
        "targets": [
          {
            "expr": "rate(flowra_outbox_cleanup_deleted_total[1h])",
            "legendFormat": "Deleted/hour",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Events", "logBase": 1, "show": true},
          {"format": "short", "logBase": 1, "show": false}
        ]
      }
    ]
  }
}
